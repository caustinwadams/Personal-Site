<h1>New Blog Post</h1>
<div class="container" style="width: 80vw;">
  <div class="center jumbotron bg-dark">
    <%= form_for(@blog) do |b| %>
      <%= b.label :title, style: 'color: white;' %>
      <%= b.text_field :title, class: 'form-control' %>

      <%= b.label :post, style: 'color: white;' %>
      <%= b.text_area :post, class: 'form-control', rows: 15 %>

      <%= b.submit "Create Post", class: 'btn btn-primary mt-2', style: "width: 100%;" %>
    <% end %>
  </div>
</div>
